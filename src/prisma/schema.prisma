generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
   directUrl = env("DIRECT_URL") 
  url      = env("DATABASE_URL")
 
}

//  movie model 

//  we used the enum for genre of movie type 
enum genre{
funny
action
love
crime
}

model movie {
  id    String @id @default(uuid())
  title String
  director String
  releaseYear Int
  genre genre
  rating  Int  @default(0) 
}
